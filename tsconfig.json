{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "es2017"],
        "sourceMap": true,
        "jsx": "react",
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "typeRoots": ["./node_modules/@types"],
        "types": ["node", "jest"],
        "esModuleInterop": true,
        "noEmit": false,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    },
    "exclude": ["node_modules", "public", ".cache"],
    "include": ["./src/**/*"]
}

